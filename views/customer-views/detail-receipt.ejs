<section class="checkout py-lg-4 py-md-3 py-sm-3 py-3">
  <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
    <div class="shop_inner_inf">
      <div class="privacy about">
        <h3>Chi tiết hóa đơn</h3>
        <div class="checkout-right">
          <h4>Hóa đơn của bạn gồm: <span><%= bill.products.length%> sản phẩm</span></h4>
          <table class="timetable_sub">
            <thead>
              <tr>
                <th>STT</th>
                <th>Hình ảnh</th>
                <th>Tên hàng</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Ưu đãi</th>
                <th>Thành tiền</th>
              </tr>
            </thead>
            <tbody>
              <% bill.products.map((product, index)=> { 
                item = product.id_product%>
              <tr class="rem1">
                <td class="invert"><%= index +1%></td>
                <td class="invert-image" id="img-product-checkout">
                  <a href="single?id=<%=item._id%>"><img src="<%=item.imgs%>" alt=" " class="img-responsive" /></a>
                </td>
                <td class="invert"><%=item.name%></td>
                <td class="invert">
                  <div class="quantity">
                    <%=product.amount%>
                  </div>
                </td>
                <td class="invert"><%= (item.price/1000.0).toFixed(3)%>đ</td>
                <td class="invert"><%= item.discount*100%>%</td>
                <td class="invert"><%= (item.price*product.amount*(1-item.discount)/1000.0).toFixed(3)%>đ</td>
              </tr>
              <%})%>

            </tbody>
          </table>
        </div>
        <div class="checkout-left">
          <div class="checkout-left  sum-cart-shop-wrap">
            <div class="col-6 checkout-left-basket sum-cart-shop">
              <h4>Tổng cộng: <span><%= (bill.total/1000.0).toFixed(3)%>đ</span></h4>
            </div>
          </div>
          <div class="col-6 controls">
            <div>
              <label class="control-label">Địa chỉ giao hàng: <span><%=bill.address%></span></label>
            </div>
            <div>
              <label class="control-label">Ngày mua: <span><%=bill.date.toLocaleString()%></span></label>
            </div>
            <div>
              <label class="control-label">Tình trạng: <span><%=bill.status%></span></label>
            </div>
          </div>
