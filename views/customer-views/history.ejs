<%include ../components/header%>
<link rel="stylesheet" href="stylesheets/history-receipt.css" />
<!-- short -->
<div class="using-border py-3">
  <div class="inner_breadcrumb  ml-4">
    <ul class="short_ls">
      <li>
        <a href="index">Trang chủ</a>
        <span>/ /</span>
      </li>
      <li><a href="history">Lịch sử mua hàng</a></li>
    </ul>
  </div>
</div>
<!-- //short-->

<div class="container">
  <div id="table-wrap">
    <h1 id="lable-history">Lịch sử mua hàng</h1>

    <div class="sum-bill"><i>Tổng cộng <%= bills.length%> hóa đơn </i> </div>
    <% if (bills.length !== 0) {%>
    <table class="table table-striped table-inverse table-responsive" id="table-history-receipt">
      <thead class="thead-default">
        <tr>
          <th>Số thứ tự</th>
          <th>Ngày mua hàng</th>
          <th>Tổng tiền</th>
          <th>Tình trạng</th>
          <th></th>
        </tr>
      </thead>
      <tbody>

        <% bills.map((bill, index)=> { %>
        <tr data-href="signup" onclick="seeDetail('<%=bill._id%>')">
          <td scope="row"><%= index +1%></td>
          <td><%= bill.date.toLocaleString()%></td>
          <td><%= (bill.total/1000.0).toFixed(3)%>đ</td>
          <td><%=  bill.status%></td>
          <td>
            <a href="detail-receipt?id=<%=bill._id%>"><i class="fas fa-eye"></i></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <%} else {%>
    <div class="empty-history"><i>(Lịch sử mua hàng của bạn trống)</i></div>
    <%}%>
  </div>

</div>
<% include ../components/footer%>
    <script src="javascripts/seeDetailReceipt.js"></script>